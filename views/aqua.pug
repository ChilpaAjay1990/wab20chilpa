extends layout

block content
  h1= title
  p Welcome to Assignment 10
  div(class="container-fluid")
        div(class="row")
            -
                let aqua = [
                    {
                        "name": "aquaplant",
                        "type": "small",
                        "cost": 1
                    },
                    {
                        "name": "aquaplant2",
                        "type": "medium",
                        "cost": 2
                    },
                    {
                        "name": "aquaplant3",
                        "type": "large",
                        "cost": 3
                    },                   
                ]
            each k in aqua
                div(class="col-sm-2") #{k.name}
                div(class="col-sm-2") #{k.type}
                div(class="col-sm-2") #{k.cost}